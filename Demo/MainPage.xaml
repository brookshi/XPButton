        <StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Background="#55ACEE">
                <xp:XPButton Margin="10" 
                             Content="Follow me" 
                             Background="Transparent" 
                             Foreground="White" 
                             PointerOverTextForeground="Gray" 
                             PointerOverBorderBrush="White"
                             PointerOverIconForeground="Gray"
                             PressedBackground="LightGray"
                             PressedBorderBrush="LightGray"
                             PressedIconForeground="Black"
                             PressedTextForeground="Black"
                             FontSize="20" 
                             IconSize="30" 
                             IconPosition="Left" 
                             BorderBrush="White" 
                             BorderThickness="2" 
                             CornerRadius="0">
                    <xp:XPButton.Icon>
                        <BitmapIcon UriSource="ms-appx:///Assets/twitter.png"/>
                    </xp:XPButton.Icon>
                </xp:XPButton>
                <xp:XPButton Margin="10" 
                             Content="Refresh" 
                             Background="Black" 
                             Foreground="White" 
                             PointerOverTextForeground="Red" 
                             PointerOverBorderBrush="Green"
                             PointerOverIconForeground="Blue"
                             PressedBackground="LightGray"
                             PressedBorderBrush="LightGray"
                             PressedIconForeground="Black"
                             PressedTextForeground="Black"
                             FontSize="20" 
                             IconSize="25" 
                             IconPosition="Left" 
                             IconInterval="8"
                             BorderBrush="White" 
                             BorderThickness="2" 
                             Height="60"
                             Width="140"
                             CornerRadius="5"
                             Icon="Refresh">
                </xp:XPButton>
                <xp:XPButton Margin="10" 
                             Content="PLAY" 
                             Background="Transparent" 
                             Foreground="White" 
                             PointerOverTextForeground="Green" 
                             PointerOverBorderBrush="Green"
                             PointerOverIconForeground="Green"
                             PressedBackground="LightGray"
                             PressedBorderBrush="LightGray"
                             PressedIconForeground="White"
                             PressedTextForeground="White"
                             FontSize="15" 
                             IconSize="18" 
                             IconPosition="Left" 
                             IconInterval="2"
                             BorderBrush="White" 
                             BorderThickness="2" 
                             CornerRadius="15"
                             Width="120"
                             Icon="Play">
                </xp:XPButton>
                <xp:XPButton Margin="10" 
                             Content="Chrome" 
                             Background="Transparent" 
                             Foreground="Green" 
                             IconForeground="White"
                             PointerOverTextForeground="White" 
                             PointerOverBorderBrush="White"
                             PointerOverIconForeground="Red"
                             PressedBackground="LightGray"
                             PressedBorderBrush="LightGray"
                             PressedIconForeground="White"
                             PressedTextForeground="White"
                             FontSize="15" 
                             IconSize="18" 
                             IconPosition="Left" 
                             BorderBrush="Yellow" 
                             BorderThickness="2" 
                             CornerRadius="6">
                    <xp:XPButton.Icon>
                        <FontIcon FontFamily="/Assets/Fonts/fontawesome-webfont.ttf#FontAwesome" Glyph="&#xf268;"/>
                    </xp:XPButton.Icon>
                </xp:XPButton>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Background="#55ACEE">
                <xp:XPButton Margin="10" 
                             Content="Follow me" 
                             Background="Transparent" 
                             Foreground="White" 
                             PointerOverTextForeground="Gray" 
                             PointerOverBorderBrush="White"
                             PointerOverIconForeground="Gray"
                             PressedBackground="LightGray"
                             PressedBorderBrush="LightGray"
                             PressedIconForeground="Black"
                             PressedTextForeground="Black"
                             FontSize="20" 
                             IconSize="30" 
                             IconInterval="0"
                             IconPosition="Right" 
                             BorderBrush="White" 
                             BorderThickness="2" 
                             CornerRadius="0">
                    <xp:XPButton.Icon>
                        <BitmapIcon UriSource="ms-appx:///Assets/facebook.png"/>
                    </xp:XPButton.Icon>
                </xp:XPButton>
                <xp:XPButton Margin="10" 
                             Content="Home" 
                             Background="Black" 
                             Foreground="White" 
                             PointerOverTextForeground="Red" 
                             PointerOverBorderBrush="Green"
                             PointerOverIconForeground="Blue"
                             PressedBackground="LightGray"
                             PressedBorderBrush="LightGray"
                             PressedIconForeground="Black"
                             PressedTextForeground="Black"
                             FontSize="20" 
                             IconSize="25" 
                             IconPosition="Right" 
                             IconInterval="8"
                             BorderBrush="White" 
                             BorderThickness="2" 
                             Height="60"
                             Width="140"
                             CornerRadius="5"
                             Icon="Home">
                </xp:XPButton>
                <xp:XPButton Margin="10" 
                             Content="Send" 
                             Background="Transparent" 
                             Foreground="White" 
                             PointerOverTextForeground="Green" 
                             PointerOverBorderBrush="Green"
                             PointerOverIconForeground="Green"
                             PressedBackground="LightGray"
                             PressedBorderBrush="LightGray"
                             PressedIconForeground="White"
                             PressedTextForeground="White"
                             FontSize="15" 
                             IconSize="18" 
                             IconPosition="Right" 
                             IconInterval="5"
                             BorderBrush="White" 
                             BorderThickness="2" 
                             CornerRadius="15"
                             Width="120"
                             Icon="Send">
                </xp:XPButton>
                <xp:XPButton Margin="10" 
                             Content="Share" 
                             Background="Transparent" 
                             Foreground="Green" 
                             IconForeground="White"
                             PointerOverTextForeground="White" 
                             PointerOverBorderBrush="White"
                             PointerOverIconForeground="Red"
                             PressedBackground="LightGray"
                             PressedBorderBrush="LightGray"
                             PressedIconForeground="White"
                             PressedTextForeground="White"
                             FontSize="15" 
                             IconSize="18" 
                             IconPosition="Right" 
                             BorderBrush="Yellow" 
                             BorderThickness="2" 
                             CornerRadius="6">
                    <xp:XPButton.Icon>
                        <FontIcon FontFamily="/Assets/Fonts/fontawesome-webfont.ttf#FontAwesome" Glyph="&#xf064;"/>
                    </xp:XPButton.Icon>
                </xp:XPButton>
            </StackPanel>
        </StackPanel>
